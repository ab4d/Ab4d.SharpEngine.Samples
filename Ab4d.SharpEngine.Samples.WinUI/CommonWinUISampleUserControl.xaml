<UserControl
    x:Class="Ab4d.SharpEngine.Samples.WinUI.CommonWinUISampleUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ab4d.SharpEngine.Samples.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sharpEngine="using:Ab4d.SharpEngine.WinUI"
    mc:Ignorable="d">
    <Grid Name="RootGrid">
        <sharpEngine:SharpEngineSceneView x:Name="MainSceneView" PresentationType="SharedTexture" BackgroundColor="White" />

        <StackPanel Name="TitleStackPanel" VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Vertical">
            <TextBlock Name="TitleTextBlock" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="10 10 5 5" TextWrapping="Wrap" />
            <TextBlock Name="SubtitleTextBlock" FontSize="14" Margin="10 0 10 0" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
