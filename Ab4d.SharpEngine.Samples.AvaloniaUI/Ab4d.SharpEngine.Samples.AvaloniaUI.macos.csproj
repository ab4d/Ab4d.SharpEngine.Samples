<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <PackageIcon>sharp-engine_logo.ico</PackageIcon>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Resources\TreeTexture.png" />
    <None Remove="sharp-engine_logo.ico" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Include="sharp-engine_logo.ico" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="..\lib\macos\libMoltenVK.dylib">
      <Link>libMoltenVK.dylib</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\TreeTexture.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.10.18" />
    <PackageReference Include="Avalonia.Desktop" Version="0.10.18" />
    <PackageReference Include="Avalonia.Diagnostics" Version="0.10.18" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Ab4d.SharpEngine.AvaloniaUI\Ab4d.SharpEngine.AvaloniaUI.csproj" />
    <ProjectReference Include="..\..\Ab4d.SharpEngine\Ab4d.SharpEngine.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="SharpEngineIntegrationTest.axaml.cs">
      <DependentUpon>SharpEngineIntegrationTest.axaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
