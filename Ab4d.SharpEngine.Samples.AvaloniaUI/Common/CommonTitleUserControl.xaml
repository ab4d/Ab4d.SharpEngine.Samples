<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="Ab4d.SharpEngine.Samples.AvaloniaUI.Common.CommonTitleUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Name="RootGrid">
        <Border Name="RootBorder" Background="{StaticResource GrayTitlePageGradient}" />

        <ScrollViewer Name="MarkdownScrollViewer" Grid.Row="0" Margin="20" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" />
    </Grid>
</UserControl>
