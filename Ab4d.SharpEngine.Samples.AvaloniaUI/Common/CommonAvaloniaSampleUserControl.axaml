<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sharpEngine="clr-namespace:Ab4d.SharpEngine.AvaloniaUI;assembly=Ab4d.SharpEngine.AvaloniaUI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ab4d.SharpEngine.Samples.AvaloniaUI.Common.CommonAvaloniaSampleUserControl">
    <Grid Name="RootGrid">
        <Border Name="RootBorder" Background="{StaticResource CommonSamplePageGradient}" />

        <sharpEngine:SharpEngineSceneView x:Name="MainSceneView" PresentationType="SharedTexture" BackgroundColor="Transparent" />

        <StackPanel Name="TitleStackPanel" VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Vertical">
            <TextBlock Name="TitleTextBlock" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="10 10 5 5" TextWrapping="Wrap" />
            <TextBlock Name="SubtitleTextBlock" FontSize="14" Margin="10 0 0 0" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
