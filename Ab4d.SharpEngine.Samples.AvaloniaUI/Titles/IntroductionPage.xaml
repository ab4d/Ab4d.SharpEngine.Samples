<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sharpEngine="clr-namespace:Ab4d.SharpEngine.AvaloniaUI;assembly=Ab4d.SharpEngine.AvaloniaUI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ab4d.SharpEngine.Samples.AvaloniaUI.Titles.IntroductionPage" >
    <Grid Name="RootGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <sharpEngine:SharpEngineSceneView x:Name="MainSceneView" Grid.Row="0" PresentationType="SharedTexture" BackgroundColor="White" />

        <TextBlock Name="InfoTextBlock" Grid.Row="1" FontSize="22" HorizontalAlignment="Center" TextAlignment="Center" Margin="0 0 0 20" Text="&#x0a;" />

        <Button Name="PlayAgainButton" Grid.Row="1" Content="Play again" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" IsVisible="False" Click="PlayAgainButton_OnClick" />
    </Grid>
</UserControl>