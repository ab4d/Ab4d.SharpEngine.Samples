<Page x:Class="Ab4d.SharpEngine.Samples.Wpf.TestScenes.TestScenesIntroductionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:common="clr-namespace:Ab4d.SharpEngine.Samples.Wpf.Common"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"      
      Title="TestScenesIntroductionPage">
    <Page.Background>
        <LinearGradientBrush  StartPoint="0,1" EndPoint="0,0">
            <GradientStop Color="#FCCC" Offset="0"/>
            <GradientStop Color="#FFFFFFFF" Offset=".5"/>
        </LinearGradientBrush>
    </Page.Background>
    <Grid>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="20 0 20 0">
            <common:TextBlockEx Style="{StaticResource InfoTitle}" Margin="0 30 0 20">TestScenes</common:TextBlockEx>
           
        </StackPanel>
    </Grid>
</Page>