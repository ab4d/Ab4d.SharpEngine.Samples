<Page x:Class="Ab4d.SharpEngine.Samples.Wpf.CommonWpfSamplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sharpEngine="clr-namespace:Ab4d.SharpEngine.Wpf;assembly=Ab4d.SharpEngine.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CommonSampleRunner">

    <Grid Name="RootGrid">
        <Border Name="RootBorder" Background="{StaticResource CommonSamplePageGradient}" />

        <sharpEngine:SharpEngineSceneView x:Name="MainSceneView" PresentationType="SharedTexture" BackgroundColor="Transparent" />

        <StackPanel Name="TitleStackPanel" VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Vertical">
            <TextBlock Name="TitleTextBlock" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="10 10 5 5" TextWrapping="Wrap" />
            <TextBlock Name="SubtitleTextBlock" FontSize="14" Margin="10 0 0 0" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Page>
